{
  "swagger": "2.0",
  "info": {
    "title": "MMH API",
    "description": "This is Apis for MMH",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "scheme": "bearer",
      "in": "header",
      "bearerFormat": "JWT"
    }
  },
  "tags": [],
  "schemes": ["http"],
  "consumes": [],
  "produces": [],
  "paths": {

    "/api/users/signUp": {
      "post": {
        "tags": ["user"],
        "description": "회원가입",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "userId": {
                  "example": "ozam"
                },
                "password": {
                  "type": "string",
                  "example": "123123"
                },
                "passwordConfirm": {
                  "type": "string",
                  "example": "123123"
                },
                "email": {
                  "example": "ozam@naver.com"
                },
                "name": {
                  "example": "JeongMinOh"
                }
              }
            }
          }
        ],
        "responses": {
          "201":{
            "description": "회원가입을 환영합니다."
          },
          "400": {
            "description": "패스워드가 패스워드 확인란과 동일하지 않습니다."
          },
          "402": {
            "description": "필수사항을 모두 채워주세요."
          },
          "403": {
            "description": "형식에 맞지않는 이메일입니다."
          },
          "406": {
            "description": "사용중인 email 입니다."
          }
        }
      }
    },

    "/api/users/checkDup": {
      "post": {
        "tags": ["user"],
        "description": "userId 중복 검사",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "userId": {
                  "example": "ozam"
                }
              }
            }
          }
        ],
        "responses": {
          "200":{
            "description": "사용가능한 ID입니다."
          },
          "400": {
            "description": "이미 사용중인 ID입니다."
          },
          "403": {
            "description": "ID 형식을 확인해주세요."
          }
        }
      }
    },

    "/api/users/logIn": {
      "post": {
        "tags": ["user"],
        "description": "로그인 하기",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "ozam@naver.com"
                },
                "password": {
                  "type": "string",
                  "example": "123123"
                }
              }
            }
          }
        ],
        "responses": {
          "200":{
            "description": "token"
          },
          "400": {
            "description": "이메일 또는 패스워드가 잘 못 되었습니다."
          }
        }
      }
    },

    "/api/users/me": {
      "get": {
        "tags": ["user"],
        "description": "사용자 정보 조회",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [],
        "responses": {
         "200":{
            "description": "email/userId"
          },
          "401": {
            "description": "로그인 후 사용해주세요."
          }
        }
      }
    },

    "/api/posts/main": {
      "post": {
        "tags": ["POST"],
        "description": "상품 업로드 하기",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "example": "연안식당 푸짐한 동태탕"
                },
                "price": {
                  "example": "10008"
                },
                "img": {
                  "example": "https://img-cf.kurly.com/shop/data/goodsview/20200401/gv40000088471_1.jpg"
                }
              }
            }
          }
        ],
        "responses": {
          "200":{
            "description": "상품 등록에 성공하였습니다."
          },
          "400": {
            "description": "알 수 없는 오류가 떴습니다. 관리자에게 문의하세요."
          }
        }
      },
      "get": {
        "tags": ["POST"],
        "description": "상품 조회하기",
        "parameters": [],
        "responses": {
         "200":{
            "description": "success"
          },
          "400": {
            "description": "알 수 없는 오류가 떴습니다. 관리자에게 문의하세요."
          }
        }
      }
    },

    "/api/carts/{postId}": {
      "post": {
        "description" : "장바구니에 상품을 추가하는 API, API url의 쿼리값, 프론트에서 제공하는 BODY에 담긴 값을 받아서 실행시킨다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": ["CART"],
        "name": "장바구니 추가",
        "summary": "장바구니에 상품 추가",
        "parameters": [
          {
            "name": "postId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "description": "post의 ID"
            }
          },
          {
            "name": "req.body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "String",
                  "description": "게시글의 제목"
                },
                "price": {
                  "type": "string",
                  "description": "가격"
                },
                "img": {
                  "type": "String",
                  "description": "상품 게시글 이미지의 url"
                },
                "quantity": {
                  "type": "string",
                  "description": "상품의 구매 수량"
                }
              },
              "example": {
                "title": "유기농 요구르트 플레인",
                "price": "2380",
                "img": "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQrZXK3TgcxqYn4VDLUvuNC7zcTz6DzLj03rw&usqp=CAU",
                "quantity": "3"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "장바구니 추가 완료"
          },
          "405": {
            "description": "이미 장바구니에 있는 상품입니다."
          },
          "400": {
            "description": "알 수 없는 오류가 발생했습니다. 관리자에게 문의하세요."
          },
          "500": {
            "description": "서버 오류 발생. 권한을 확인해 주세요."
          }
        }
      }
    },

    "/api/carts": {
      
      "get": {
        "description" : "로그인 한 유저의 장바구니에 담긴 모든 물품을 조회하는 API",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": ["CART"],
        "name": "장바구니 조회",
        "summary": "특정 유저 장바구니 조회",
        "parameters": [],
        "responses": {
          "200": {
            "description": "장바구니를 모두 불러왔습니다."
          },
          "401": {
            "description": "로그인이 필요합니다."
          },
          "400": {
            "description": "알 수 없는 오류가 발생했습니다. 관리자에게 문의하세요."
          },
          "500": {
            "description": "로그인이 필요합니다."
          }
        }
      },

      "put": {
        "description" : "장바구니에 상품 수량을 변경하는 API, 프론트에서 제공하는 BODY에 담긴 값을 받아서 실행시킨다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": ["CART"],
        "name": "장바구니 수정",
        "summary": "장바구니 특정 물품 수량 수정",
        "parameters": [
          {
            "name": "req.body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "quantity": {
                  "type": "string",
                  "description": "상품의 구매 수량"
                },
                "postId": {
                  "type": "String",
                  "description": "상품의 ID"
                }
              },
              "example": {
                "quantity": "2",
                "postId": "d9uchnuieqwu13"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "수정이 완료되었습니다."
          },
          "200_2": {
            "description": "(물품 갯수가 1에서 0으로 바뀌었을 때,) 삭제가 완료되었습니다."
          },
          "400": {
            "description": "알 수 없는 오류가 발생했습니다. 관리자에게 문의하세요."
          },
          "500": {
            "description": "서버 오류 발생. 권한을 확인해 주세요."
          }
        }
      },

      "delete": {
        "description" : "장바구니에 상품을 제거하는 API, 프론트에서 제공하는 BODY에 담긴 값을 받아서 실행시킨다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": ["CART"],
        "name": "장바구니 삭제",
        "summary": "장바구니 특정 물품 삭제",
        "parameters": [
          {
            "name": "req.body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "postId": {
                  "type": "String",
                  "description": "상품의 ID"
                }
              },
              "example": {
                "postId": "d9uchnuieqwu13"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "해당 물품이 장바구니에서 삭제되었습니다."
          },
          "400": {
            "description": "알 수 없는 오류가 발생했습니다. 관리자에게 문의하세요."
          },
          "400_2": {
            "description": "(장바구니에 등록된 물품이 아닐 때,)장바구니에 등록된 물품이 아닙니다."
          },
          "500": {
            "description": "서버 오류 발생. 권한을 확인해 주세요."
          }
        }
      }
    }
  },

  "definitions": {}
}